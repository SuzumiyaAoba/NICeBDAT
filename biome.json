{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**", "*.config.js", "*.config.ts", "package.json"],
    "experimentalScannerIgnores": [".next/**", "out/**", "node_modules/**", ".git/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "useExhaustiveDependencies": "off"
      },
      "performance": {
        "recommended": true,
        "noImgElement": "off"
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "useImportType": "off"
      },
      "suspicious": {
        "recommended": true,
        "noShadowRestrictedNames": "off"
      },
      "a11y": {
        "recommended": true,
        "useButtonType": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  }
}
